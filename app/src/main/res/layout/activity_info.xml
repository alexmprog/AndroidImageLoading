<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/activity_info_image_width"
        android:layout_height="@dimen/activity_info_image_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_info_margin"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/image_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_info_margin"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/image_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_info_margin"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/image_size_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_info_margin"
        android:textSize="16sp" />

</LinearLayout>